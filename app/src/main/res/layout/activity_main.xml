<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/canhle8"
        android:layout_marginEnd="@dimen/canhle8"
        android:layout_marginLeft="@dimen/canhle8"
        android:layout_marginRight="@dimen/canhle8"
        android:layout_marginStart="@dimen/canhle8"
        android:layout_marginTop="@dimen/canhle8"
        android:src="@drawable/progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:layout_width="@dimen/chieucao30"
        android:layout_height="@dimen/chieucao30"
        android:layout_marginBottom="@dimen/canhle8"
        android:layout_marginEnd="@dimen/canhle8"
        android:layout_marginLeft="@dimen/canhle8"
        android:layout_marginRight="@dimen/canhle8"
        android:layout_marginStart="@dimen/canhle8"
        android:layout_marginTop="@dimen/canhle8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.815" />

</android.support.constraint.ConstraintLayout>